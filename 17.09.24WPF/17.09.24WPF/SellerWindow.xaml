<Window x:Class="_17._09._24WPF.SellerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно продавца" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ProductsDataGrid" Grid.Row="0" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Количество на складе" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Цена с прибылью" Binding="{Binding PriceWithProfit, StringFormat=F2}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="QuantityTextBox" Width="50" Margin="0,0,10,0"/>
            <Button Content="Оплатил" Click="PayButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>