<Window x:Class="_17._09._24WPF.AdminWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Общая статистика:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="TotalProductsTextBlock"/>
            <TextBlock x:Name="TotalQuantityTextBlock"/>
            <TextBlock x:Name="TotalValueTextBlock"/>
            <TextBlock x:Name="AveragePriceTextBlock"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Топ 5 самых дорогих товаров:" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="MostExpensiveListBox" Height="150"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Топ 5 товаров по количеству:" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="MostQuantityListBox" Height="150"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>